<div class="alert-banner alert-banner-{{@type}}">
  <div class="alert-banner-icon">
    <icon
      @size="l"
      class="alert-banner-{{this.messageinfo.glyphclass}}"
      aria-hidden=true
      @glyph={{messageinfo.glyph}}
    />
  </div>
  <div class="alert-banner-message">
    <div class="alert-banner-message-title">
      {{or @title @type}}
    </div>
    {{#if @message}}
      <p class="alert-banner-message-body">
        {{@message}}
      </p>
    {{/if}}
    {{#if (has-block)}}
      <p class="alert-banner-message-actions">
        {{yield}}
      </p>
    {{/if}}
  </div>
</div>
